{% extends "base.html" %}

{% block title %}Alertas - Exitus{% endblock %}

{% block content %}
<div class="container mx-auto p-6 space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="fas fa-bell text-yellow-500 mr-3"></i>Alertas e Notificações
            </h1>
            <p class="text-gray-600 mt-1">Monitore seus ativos e portfólios com alertas personalizados</p>
        </div>
        <button 
            onclick="alert('Modal em desenvolvimento - M7.3')"
            class="btn btn-primary">
            <i class="fas fa-plus mr-2"></i>Novo Alerta
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="card p-6 text-center hover:shadow-xl transition-shadow">
            <div class="text-3xl font-bold text-blue-600 mb-2">{{ alertas|length }}</div>
            <div class="text-sm text-gray-600 uppercase">Total de Alertas</div>
        </div>
        <div class="card p-6 text-center hover:shadow-xl transition-shadow">
            <div class="text-3xl font-bold text-green-600 mb-2">
                {{ alertas|selectattr('ativo', 'equalto', True)|list|length }}
            </div>
            <div class="text-sm text-gray-600 uppercase">Ativos</div>
        </div>
        <div class="card p-6 text-center hover:shadow-xl transition-shadow">
            <div class="text-3xl font-bold text-orange-600 mb-2">
                {{ alertas|selectattr('tipoalerta', 'equalto', 'ALTA_PRECO')|list|length }}
            </div>
            <div class="text-sm text-gray-600 uppercase">Alta de Preço</div>
        </div>
        <div class="card p-6 text-center hover:shadow-xl transition-shadow">
            <div class="text-3xl font-bold text-purple-600 mb-2">
                {{ alertas|selectattr('totalacionamentos', 'greaterthan', 0)|list|length }}
            </div>
            <div class="text-sm text-gray-600 uppercase">Acionados</div>
        </div>
    </div>

    <!-- Filtros com HTMX -->
    <div class="card p-6">
        <form 
            hx-get="{{ url_for('dashboard.alerts_table') }}"
            hx-target="#alerts-table-container"
            hx-trigger="change, submit"
            hx-indicator=".htmx-loading-overlay"
            class="grid grid-cols-1 md:grid-cols-4 gap-4">
            
            <div>
                <label class="label text-sm">Tipo de Alerta</label>
                <select name="tipo" class="input text-sm">
                    <option value="">Todos</option>
                    <option value="ALTA_PRECO" {% if filtros.tipo == 'ALTA_PRECO' %}selected{% endif %}>Alta de Preço</option>
                    <option value="QUEDA_PRECO" {% if filtros.tipo == 'QUEDA_PRECO' %}selected{% endif %}>Queda de Preço</option>
                    <option value="DIVIDENDO_PREVISTO" {% if filtros.tipo == 'DIVIDENDO_PREVISTO' %}selected{% endif %}>Dividendo Previsto</option>
                    <option value="META_RENTABILIDADE" {% if filtros.tipo == 'META_RENTABILIDADE' %}selected{% endif %}>Meta de Rentabilidade</option>
                    <option value="VOLATILIDADE_ALTA" {% if filtros.tipo == 'VOLATILIDADE_ALTA' %}selected{% endif %}>Volatilidade Alta</option>
                    <option value="DESVIO_ALOCACAO" {% if filtros.tipo == 'DESVIO_ALOCACAO' %}selected{% endif %}>Desvio de Alocação</option>
                </select>
            </div>
            
            <div>
                <label class="label text-sm">Status</label>
                <select name="status" class="input text-sm">
                    <option value="">Todos</option>
                    <option value="ativo" {% if filtros.status == 'ativo' %}selected{% endif %}>Ativos</option>
                    <option value="inativo" {% if filtros.status == 'inativo' %}selected{% endif %}>Inativos</option>
                </select>
            </div>
            
            <div>
                <label class="label text-sm">Ativo</label>
                <select name="ativo" class="input text-sm">
                    <option value="">Todos</option>
                    {% for ativo in ativos %}
                    <option value="{{ ativo.ticker }}" {% if filtros.ativo == ativo.ticker %}selected{% endif %}>
                        {{ ativo.ticker }}
                    </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="flex items-end space-x-2">
                <button type="submit" class="btn btn-primary w-full">
                    <i class="fas fa-filter mr-2"></i>Filtrar
                </button>
                <a href="{{ url_for('dashboard.alerts') }}" class="btn bg-gray-200 hover:bg-gray-300 text-gray-700">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>

    <!-- Tabela de Alertas com HTMX Target -->
    <div class="card">
        <div class="p-6 border-b flex items-center justify-between">
            <h2 class="text-xl font-bold">Meus Alertas</h2>
            <span class="text-sm text-gray-500">
                <i class="fas fa-sync-alt mr-1"></i>Atualização automática
            </span>
        </div>
        
        <!-- Container HTMX Target -->
        <div id="alerts-table-container" class="relative">
            {% include 'components/alerts_table.html' %}
            
            <!-- Loading Overlay (FORA da tabela) -->
            <div class="htmx-loading-overlay" style="display: none;">
                <div class="fixed inset-0 bg-black bg-opacity-30 flex items-center justify-center z-50">
                    <div class="bg-white rounded-lg shadow-xl p-6 flex flex-col items-center space-y-3">
                        <div class="animate-spin rounded-full h-12 w-12 border-b-4 border-yellow-500"></div>
                        <span class="text-gray-600 font-medium">Filtrando alertas...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extrascripts %}
<style>
/* Fix: Garantir que botões sejam clicáveis */
.btn, button {
    cursor: pointer !important;
    position: relative;
    z-index: 10;
}

/* HTMX Indicator - só aparecer quando ativo */
.htmx-loading-overlay {
    display: none !important;
}

.htmx-loading-overlay.htmx-request {
    display: block !important;
}

/* Remover overlay antigo que estava bloqueando */
.htmx-indicator {
    display: none !important;
}
</style>
{% endblock %}
